@startuml
!define C4P https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master
!includeurl C4P/C4_Context.puml

title Контекстная диаграмма PropDevelopment с новыми сервисами "Умный дом"

Person(собственник, "Собственник", "Владелец недвижимости от PropDevelopment")

System_Boundary(propdev, "PropDevelopment") {
    System(приложение_собственника, "Мобильное приложение", "Управление ЖКУ, ремонтом и умным домом для собственников")
    System(платформа_умный_дом, "Платформа 'Умный дом'", "Интеграция с партнером для новых сервисов")
}

System_Ext(партнер_умный_дом, "Партнер 'Умный дом'", "Внешний сервис интеллектуального домофона и шлагбаума")

' Взаимодействия собственника
Rel(собственник, приложение_собственника, "Управление услугами, ремонтом, умным домом")
Rel(приложение_собственника, платформа_умный_дом, "Запросы на управление домофоном/шлагбаумом")
Rel(платформа_умный_дом, партнер_умный_дом, "Интеграция API для биометрии/распознавания номеров")
@enduml